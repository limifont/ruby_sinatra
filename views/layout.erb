<html>
	<head>
		<title>Bob</title>
		<link rel="stylesheet" type="text/css" href="/stylesheets/style.css" />
		<link rel="stylesheet" type="text/css" href="/stylesheets/normalize.css" />
		<link rel="stylesheet" type="text/css" href="/stylesheets/skeleton.css" />
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.3/jquery.min.js"></script>


	</head>
	<body>
		<header class="home-header">
			<h4>BOB.</h4>
			<img id="settings" class="settings" src="/images/gear.png">
			<div class="menu" style="display:none">
				<div class="arrow-up"></div>
				<a class='buddy-btn button button-primary u-full-width' href='/pick-a-buddy/alex'>BOB</a>
				<a class='buddy-btn button button-primary u-full-width' href='/pick-a-buddy/bruce'>Bruce</a>
				<a class='buddy-btn button button-primary u-full-width' href='/pick-a-buddy/victoria'>Victoria</a>
			</div>
		</header>
		<%= yield %>
	</body>
	<script type="text/javascript">
		$(function(){
			$('#settings').click(function(){
				$('.menu').toggle();
			});

			$('.buddy-btn').click(function(){
				$('.menu').hide();
			});
		});
	</script>
</html>